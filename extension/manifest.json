{
  "manifest_version": 3,
  "name": "YouTube Music Discord RPC",
  "version": "2.0.3",
  "description": "Display your YouTube Music activity on Discord - No server required!",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://music.youtube.com/*",
    "http://127.0.0.1/*",
    "ws://127.0.0.1/*",
    "https://discord.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html"
}
